{% block container%}      
    <div class="well"> 
        <div class="row">
            <div class="span11">
                <h3 class="text-center">Modifier un stade</h3>
                <hr>
                <div class="span10 offset2">
                    <form action='/stade/modifier/{{stade.id}}' method="POST" class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                            <label class="control-label" for="nom">Nom <span class="required">*</span></label>
                            <div class="controls">
                                <input type="text" name="nom" value="{{set_value('nom', stade.nom)}}" placeholder="Nom du stade" class="span3" required="required"/>
                                <div class="erreur">
                                        {{ form_error('nom') }}         
                                    </div>
                                </div>
                            </div>
                            
                            <div class="control-group">
                            <label class="control-label" for="ville">Ville <span class="required">*</span></label>
                            <div class="controls">
                                <input type="text" name="ville" value="{{set_value('ville', stade.ville)}}" placeholder="Ville" class="span3" required="required"/>
                                <div class="erreur">
                                        {{ form_error('ville') }}         
                                    </div>
                                </div>
                            </div>
                            
                            <div class="control-group">
                            <label class="control-label" for="capacite">Capacité <span class="required">*</span></label>
                            <div class="controls">
                                <input type="text" name="capacite" value="{{set_value('capacite', stade.capacite)}}" placeholder="capacité du stade" class="span3" required="required"/>
                                <div class="erreur">
                                        {{ form_error('capacite') }}
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-danger">Modifier</button>
                                </div>
                            </div>
                        </fieldset>
                    </form> 
                </div>
           </div>
        </div>
     </div>
{% endblock container%}