{% block container%}      
    <div class="well"> 
        <div class="row">
            <div class="span11">
                <h3 class="text-center">Modifier un Arbitre</h3>
                <hr>
                <div class="span10 offset2">
                    <form action='/arbitre/modifier/{{arbitre.id}}' method="POST" class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="nom">Nom <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" name="nom" class="span3" required="required" value="{{ set_value('nom', arbitre.nom) }}"/>
                                    <div class="erreur">
                                        {{ form_error('nom') }}         
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="description">Description</label>
                                <div class="controls">
                                    <textarea name="description" class="span3">{{ set_value('description', arbitre.description) }}</textarea>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-danger">Modifier</button>
                                </div>
                            </div>
                        </fieldset>
                    </form> 
                </div>
           </div>
        </div>
     </div>
{% endblock container%}