{% block container%}
    <div class="well">
        <div class="row">
            <div class="span11">
                <h3 class="text-center">Ajouter une Saison</h3>
                <hr>
                <div class="span10 offset2">
                    <form action='/saison/ajout' method="POST" class="form-horizontal" >
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="saison">Saison</label>
                                <div class="controls">
                                    <input type="text" name="saison" class="span3" placeholder="2012/2013" required="required"/>
                                    <div class="erreur">
                                        {{ form_error('saison') }}         
                                    </div>
                                </div>
                            </div>
                                
                            <div class="control-group">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input name="saison_courant" type="checkbox"> saison courante
                                    </label>
                                </div>
                            </div>
                                
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-danger">Ajouter</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
         </div>
    </div>
{% endblock container%}