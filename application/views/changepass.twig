{% block container%}
    <div class="well">
        <div class="row">
            <div class="span11">
                <h3 class="text-center">Changer Mot de passe</h3>
                <hr>
                <div class="error span7 offset2 text-center">{{ validation_errors() }}</div>
                <div class="span10 offset2">
                    <form action='/backend/changepass' method="POST" class="form-horizontal" >
                        <fieldset>
                           
                            <div class="control-group">
                                <label class="control-label" for="password">Mot de passe courant</label>
                                <div class="controls">
                                    <input type="password" name="password" placeholder="" class="span3" required="required"/>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="password1">Nouveau mot de Passe</label>
                                <div class="controls">
                                    <input type="password" name="password1" placeholder="" class="span3" required="required"/>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="password2">Confirmer mot de Passe</label>
                                <div class="controls">
                                    <input type="password" name="password2" placeholder="" class="span3" required="required"/>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-info">Enregistrer</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
       </div>
    </div>
{% endblock container%}
